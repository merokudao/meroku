{
  "name": "@merokudao/meroku",
  "version": "0.0.1",
  "description": "A community owned dApp Store",
  "main": "index.js",
  "author": "MerokuDAO Monks",
  "license": "LGPL-2.1",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.2",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "copy:liquid": "copyfiles -u 1 ./src/rekocd/**/*.liquid ./build/",
    "prestart": "source $HOME/.nvm/nvm.sh; nvm use",
    "doc": "typedoc --options ./typedoc.json",
    "build": "tsc && yarn copy:liquid",
    "lint": "eslint . --ext .ts",
    "pretty": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "clean": "rm -rf build dist *.log",
    "rollup": "rollup build/app.js -o build/built.js --format cjs",
    "package": "pkg -c package.json build/built.js",
    "package:clean": "yarn clean && yarn build && yarn rollup && yarn package"
  },
  "dependencies": {
    "@merokudao/dapp-store-registry": "^0.0.4",
    "axios": "^0.26.1",
    "chalk": "4.1.2",
    "commander": "^9.1.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.0",
    "fs-extra": "^10.0.1",
    "liquidjs": "^9.36.0",
    "url-exist": "2.0.2",
    "winston": "^3.7.2"
  },
  "files": [
    "build",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=17.8.0"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": "./build/rekocd/**/*",
    "targets": [
      "node16-linux-arm64",
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-macos-arm64",
      "node16-win-x64",
      "node16-win-arm64"
    ],
    "outputPath": "dist"
  }
}
